---
import type { Props } from '@astrojs/starlight/props';
import OriginalFooter from '@astrojs/starlight/components/Footer.astro';

const isHomepage = Astro.locals.starlightRoute.entry.id === '';
---

{isHomepage ? (
    <footer class="">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-16 pt-8 mb-12 border-t border-gray-200 dark:border-gray-800">
            <div>
                <h2 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white">项目</h2>
                <ul class="space-y-2 p-0 text-base">
                    <li class="block"><a href="https://github.com/bilisound/client-mobile" class="no-underline text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100">Bilisound App</a></li>
                    <li class="block"><a href="https://bilisound.moe" class="no-underline text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100">Bilisound Classic</a></li>
                    <li class="block"><a href="https://app.bilisound.com" class="no-underline text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100">Bilisound 网页版</a></li>
                </ul>
            </div>
            <div>
                <h2 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white">文档</h2>
                <ul class="space-y-2 p-0 text-base">
                    <li class="block"><a href="./guides/get-started/" class="no-underline text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100">用户手册</a></li>
                </ul>
            </div>
            <div>
                <h2 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white">社区</h2>
                <ul class="space-y-2 p-0 text-base">
                    <li class="block"><a href="https://github.com/bilisound" class="no-underline text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100">GitHub</a></li>
                </ul>
            </div>
        </div>
        <div class="text-center text-sm leading-relaxed text-gray-500 dark:text-gray-400">
            <p>&copy; 2012-2025 Bilisound Team ・ Released under the <a href="https://www.gnu.org/licenses/gpl-3.0.html" target="_blank" class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100">GNU GPLv3 license</a></p>
        </div>
    </footer>
) : <OriginalFooter {...Astro.props} />}
